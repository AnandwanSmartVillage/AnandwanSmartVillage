<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_alignParentTop="true"
    android:id="@+id/drawerLayout"
    android:layout_height="match_parent"
    tools:context=".ActivityJourney">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:itemHorizontalPadding="40dp"
        app:itemTextAppearance="@style/TextViewStyle"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/app_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/bbb" />


            <TextView
                android:id="@+id/textView2"
                android:layout_width="317dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="@string/new_journey"
                android:textColor="#B2141415"
                android:textSize="40dp"
                android:textStyle="bold"
                app:drawableTint="#060012"
                app:fontFamily="sans-serif" />

            <View
                android:layout_width="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="17dp"
                android:layout_height="3dp"
                android:background="@color/main"/>



            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="204dp"
                android:layout_height="209dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/ba" />


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="25dp"
                android:text="@string/description"
                android:textColor="#C61E0202"
                android:textSize="17dp"
                app:drawableTint="#05000E" />


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                app:srcCompat="@drawable/b" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="30dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="298dp">



                    <ViewFlipper
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/vf"
                        >

                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="242dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/c" />

                        <ImageView
                            android:id="@+id/imag1"
                            android:layout_width="match_parent"
                            android:layout_height="242dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/d" />

                        <ImageView
                            android:id="@+id/imag9"
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/e"
                            />

                        <ImageView
                            android:id="@+id/imag3"
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/f"
                            />

                        <ImageView
                            android:id="@+id/imag8"
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/g"
                            />

                        <ImageView
                            android:id="@+id/imag5"
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/h"
                            />

                        <ImageView
                            android:id="@+id/imag6"
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/i"
                            />

                        <ImageView
                            android:id="@+id/imag7"
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/j"
                            />








                    </ViewFlipper>





                    <ImageView
                        android:id="@+id/but"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:onClick="prev"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical|left"
                        android:background="@drawable/button_background"
                        app:srcCompat="@drawable/left"
                        tools:ignore="OnClick" />

                    <ImageView
                        android:id="@+id/butd"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:onClick="next"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical|right"
                        android:background="@drawable/button_background"
                        app:srcCompat="@drawable/right"
                        tools:ignore="OnClick" />


                </FrameLayout>




            </LinearLayout>


            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="25dp"
                android:text="@string/descript"
                android:textSize="17dp"
                app:drawableTint="#05000E" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">


                <View
                    android:layout_width="3dp"
                    android:layout_gravity="center"
                    android:layout_height="219dp"
                    android:background="@color/main"/>


                <TextView
                    android:layout_width="300dp"
                    android:layout_height="219dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/intro_txt"
                    android:textColor="#B91E0101"
                    android:textSize="23dp"
                    app:drawableTint="#05000E" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="30dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="298dp">



                    <ViewFlipper
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/vf1"
                        >

                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/k"
                            />

                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/l"
                            />

                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/n"
                            />


                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/x"
                            />

                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/p"
                            />

                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/o"
                            />

                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/u"
                            />

                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/y"
                            />

                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/z"
                            />








                    </ViewFlipper>





                    <ImageView
                        android:id="@+id/but1"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:onClick="previous"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical|left"
                        android:background="@drawable/button_background"
                        app:srcCompat="@drawable/left"
                        tools:ignore="OnClick" />

                    <ImageView
                        android:id="@+id/but2"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:onClick="nextpage"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical|right"
                        android:background="@drawable/button_background"
                        app:srcCompat="@drawable/right"
                        tools:ignore="OnClick" />


                </FrameLayout>







            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="25dp"
                android:text="@string/desc"
                android:textColor="#B91C0202"
                android:textSize="17dp"
                app:drawableTint="#05000E" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">


                <View
                    android:layout_width="3dp"
                    android:layout_gravity="center"
                    android:layout_height="159dp"
                    android:background="@color/main"/>





                <TextView
                    android:layout_width="300dp"
                    android:layout_height="166dp"
                    android:text="@string/descr"
                    android:textSize="25dp"
                    android:layout_marginLeft="10dp"
                    app:drawableTint="#05000E" />

            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/r" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="@string/mahasewa"
                android:textSize="35dp"
                android:textStyle="bold"
                app:drawableTint="#060012"
                app:fontFamily="sans-serif" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="@string/leprosy"
                android:textSize="25dp"
                android:textStyle="bold"
                app:drawableTint="#060012"
                app:fontFamily="sans-serif" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="@string/descri"
                android:textColor="#B91C0202"
                android:textSize="17dp"
                app:drawableTint="#05000E" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="30dp"
                app:srcCompat="@drawable/s" />


            <Button
                android:id="@+id/fip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="next" />


        </LinearLayout>


    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleX="1.07"
        android:id="@+id/botton_navigation"
        app:itemBackground="@color/colorPrimary"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>