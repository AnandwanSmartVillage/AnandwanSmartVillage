<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout tools:context=".ActivityVaform" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <ScrollView android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginHorizontal="5dp">


        <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:layout_alignTop="@+id/imageView2" android:id="@+id/scrollView">


            <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="horizontal" android:background="@android:color/white">


                <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical" android:background="@android:color/white">

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/first"  android:paddingTop="5dp" android:background="@drawable/edit_text" android:paddingLeft="20sp" android:textSize="17dp" android:gravity="left" android:layout_gravity="center" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:hint="First Name" android:layout_marginTop="20dp"  android:inputType="text"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/last" android:background="@drawable/edit_text" android:paddingLeft="20sp" android:textSize="17dp" android:layout_gravity="center" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:hint="Last Name" android:layout_marginTop="15dp"  android:inputType="text"/>

                    <Spinner android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/spin" android:layout_gravity="center"  android:background="@drawable/edit_text" android:layout_marginRight="30dp" android:layout_marginLeft="30dp"  android:paddingLeft="20sp" android:layout_marginTop="15dp" android:prompt="@string/gender" android:entries="@array/Gender" />

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/date" android:background="@drawable/edit_text" android:paddingLeft="20sp" android:textSize="17dp" android:layout_gravity="center" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:hint="Date of Birth" android:layout_marginTop="15dp"  android:inputType="text"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/email" android:background="@drawable/edit_text" android:paddingLeft="20sp" android:textSize="17dp" android:layout_gravity="center" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:hint="Email" android:layout_marginTop="15dp"  android:inputType="text"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/mail" android:background="@drawable/edit_text" android:paddingLeft="20sp" android:textSize="17dp" android:layout_gravity="center" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:hint=" Confirm Email" android:layout_marginTop="15dp"  android:inputType="text"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/no" android:background="@drawable/edit_text" android:paddingLeft="20sp" android:textSize="17dp" android:layout_gravity="center" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:hint="Mobile number " android:layout_marginTop="15dp"  android:inputType="text"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/cnno" android:background="@drawable/edit_text" android:paddingLeft="20sp" android:textSize="17dp" android:layout_gravity="center" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:hint="Confirm Mobile number " android:layout_marginTop="15dp"  android:inputType="text"/>

                    <EditText android:layout_height="60dp" android:layout_width="match_parent" android:id="@+id/add" android:background="@drawable/edit_text" android:paddingLeft="20sp" android:textSize="17dp" android:layout_gravity="center" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:hint="Complete address line " android:layout_marginTop="15dp"  android:inputType="text"/>

                    <Spinner android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/country" android:background="@drawable/edit_text" android:paddingLeft="20sp" android:layout_gravity="center" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:layout_marginTop="15dp" android:prompt="@string/contry" android:entries="@array/country_arrays"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/state" android:background="@drawable/edit_text" android:paddingLeft="20sp" android:textSize="17dp" android:layout_gravity="center" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:hint="State/Province" android:layout_marginTop="15dp"  android:inputType="text"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/pin" android:background="@drawable/edit_text" android:paddingLeft="20sp" android:textSize="17dp" android:layout_gravity="center" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:hint="Pincode" android:layout_marginTop="15dp"  android:inputType="text"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/adhar" android:background="@drawable/edit_text" android:paddingLeft="20sp" android:textSize="17dp" android:layout_gravity="center" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:hint="Adhar number" android:layout_marginTop="15dp"  android:inputType="text"/>

                    <TextView android:layout_height="34dp" android:layout_width="wrap_content" android:id="@+id/textVie" android:textSize="17dp" android:layout_gravity="left" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:layout_marginTop="15dp" app:fontFamily="sans-serif" android:textColor="@color/black" android:text="Native to MSS?" android:textStyle="bold"/>

                    <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/rb1" android:textSize="17dp" android:layout_gravity="left" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:textColor="@color/black" android:text="Yes"/>

                    <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/rb2" android:textSize="17dp" android:layout_gravity="left" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:textColor="@color/black" android:text="No"/>

                    <Spinner android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/blood" android:background="@drawable/edit_text" android:layout_gravity="left" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:layout_marginTop="15dp" android:layout_marginBottom="30dp"  android:prompt="@string/Blood" android:entries="@array/blood"/>


                    <Button android:layout_height="40dp" android:layout_width="60dp" android:id="@+id/ssc" android:background=" #666666" android:layout_gravity="right" android:layout_marginRight="30dp" android:textColor="#ffffff" android:text="Next" android:layout_marginBottom="20dp"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>