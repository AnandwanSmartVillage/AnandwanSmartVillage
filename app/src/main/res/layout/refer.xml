<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout tools:context=".ActivityVaform" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <ScrollView android:layout_height="wrap_content" android:layout_width="match_parent">


        <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical" android:layout_marginHorizontal="5dp" android:id="@+id/scrollView">


            <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="horizontal" android:background="@color/tx">


                <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical" android:background="@android:color/white">

                    <TextView android:layout_height="41dp" android:layout_width="match_parent" android:id="@+id/ref1" android:textSize="20dp" android:textColor="@color/black" android:text="Reference 1" android:layout_marginTop="20dp" android:layout_marginLeft="30dp"/>

                    <EditText android:layout_height="37dp"  android:paddingTop="5dp" android:layout_width="match_parent" android:id="@+id/first" android:background="@drawable/edit_text" android:textSize="17dp" android:layout_marginTop="20dp" android:layout_marginLeft="30dp" android:paddingLeft="20sp" android:hint="First Name" android:gravity="left" android:layout_marginRight="30dp" android:layout_gravity="center"  android:inputType="text"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/last" android:background="@drawable/edit_text" android:textSize="17dp" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:paddingLeft="20sp" android:hint="Last Name" android:layout_marginRight="30dp" android:layout_gravity="center"  android:inputType="text"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/date" android:background="@drawable/edit_text" android:textSize="17dp" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:paddingLeft="20sp" android:hint="Organisation Name" android:layout_marginRight="30dp" android:layout_gravity="center"  android:inputType="text"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/email" android:background="@drawable/edit_text" android:textSize="17dp" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:paddingLeft="20sp" android:hint="Designation" android:layout_marginRight="30dp" android:layout_gravity="center"  android:inputType="text"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/mail" android:background="@drawable/edit_text" android:textSize="17dp" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:paddingLeft="20sp" android:hint="Mobile No" android:layout_marginRight="30dp" android:layout_gravity="center"  android:inputType="text"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/no" android:background="@drawable/edit_text" android:textSize="17dp" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:paddingLeft="20sp" android:hint="Email" android:layout_marginRight="30dp" android:layout_gravity="center"  android:inputType="text"/>

                    <TextView android:layout_height="41dp" android:layout_width="match_parent" android:textSize="17dp" android:textColor="@color/black" android:text="Reference 2" android:layout_marginTop="40dp" android:layout_marginLeft="30dp"/>

                    <EditText android:layout_height="37dp"  android:paddingTop="5dp" android:layout_width="match_parent" android:background="@drawable/edit_text" android:textSize="17dp" android:layout_marginTop="20dp" android:layout_marginLeft="30dp" android:paddingLeft="20sp" android:hint="First Name" android:gravity="left" android:layout_marginRight="30dp" android:layout_gravity="center"  android:inputType="text"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:background="@drawable/edit_text" android:textSize="17dp" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:paddingLeft="20sp" android:hint="Last Name" android:layout_marginRight="30dp" android:layout_gravity="center"  android:inputType="text"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:background="@drawable/edit_text" android:textSize="17dp" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:paddingLeft="20sp" android:hint="Organisation Name" android:layout_marginRight="30dp" android:layout_gravity="center"  android:inputType="text"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:background="@drawable/edit_text" android:textSize="17dp" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:paddingLeft="20sp" android:hint="Organisation Name" android:layout_marginRight="30dp" android:layout_gravity="center" android:inputType="text"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:background="@drawable/edit_text" android:textSize="17dp" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:paddingLeft="20sp" android:hint="Designation" android:layout_marginRight="30dp" android:layout_gravity="center"  android:inputType="text"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:background="@drawable/edit_text" android:textSize="17dp" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:paddingLeft="20sp" android:hint="Mobile No" android:layout_marginRight="30dp" android:layout_gravity="center"  android:inputType="text"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:background="@drawable/edit_text" android:textSize="17dp" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:paddingLeft="20sp" android:hint="Email" android:layout_marginRight="30dp" android:layout_gravity="center"  android:inputType="text"/>

                    <TextView android:layout_height="41dp" android:layout_width="match_parent" android:layout_marginHorizontal="30dp" android:textSize="22sp" android:textColor="@color/black" android:text="Expression Of Interest" android:layout_marginVertical="30dp"/>

                    <EditText android:layout_height="100dp" android:layout_width="match_parent" android:background="@drawable/edit_text" android:textSize="17dp" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:paddingLeft="20sp" android:hint="Why do you Want to Volunteer with us" android:layout_marginRight="30dp" android:layout_gravity="center"  />

                    <EditText android:layout_height="150dp"  android:paddingRight="5dp" android:layout_width="match_parent" android:background="@drawable/edit_text" android:textSize="17dp" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:paddingLeft="20sp" android:hint="How can you make use of your qualification / experience to improve     the lives of the beneficiaries?" android:layout_marginRight="30dp" android:layout_gravity="center"  />

                    <EditText android:layout_height="100dp" android:layout_width="match_parent"  android:paddingRight="5dp" android:background="@drawable/edit_text" android:textSize="17dp" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:paddingLeft="20sp" android:hint="How will volunteering with us help you realise your larger purpose" android:layout_marginRight="30dp" android:layout_gravity="center" android:layout_marginBottom="20dp" />


                    <LinearLayout android:layout_height="65dp" android:layout_width="189dp" android:orientation="horizontal" android:layout_marginTop="10dp" android:layout_marginLeft="40dp" android:layout_marginRight="40dp" android:layout_gravity="center">

                        <Button android:layout_height="40dp" android:layout_width="60dp" android:id="@+id/sub" android:background="#666666" android:text="Submit" android:gravity="center" android:layout_marginRight="30dp" android:layout_gravity="center"/>

                        <Button android:layout_height="40dp" android:layout_width="60dp" android:id="@+id/bt2" android:background="#666666" android:text="Reset" android:layout_marginLeft="30dp" android:gravity="center" android:layout_gravity="center"/>

                    </LinearLayout>

                    <Button android:layout_height="40dp" android:layout_width="60dp" android:id="@+id/bt3" android:background="#666666" android:text="Back" android:layout_marginTop="20dp" android:layout_gravity="center" android:layout_marginBottom="20dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>