<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    android:layout_gravity="start"
    tools:context=".Agriculture">


        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/nav_view"
            android:background="@color/white"
            android:fitsSystemWindows="true"
            app:menu="@menu/drawer_menu"
            android:layout_gravity="start"
            app:headerLayout="@layout/nav_header"
            app:itemHorizontalPadding="40dp"
            app:itemTextAppearance="@style/TextViewStyle"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <include
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/app_bar"/>

    <ScrollView
        android:id="@+id/scroll8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/botton_navigation"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgH1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/coveragriculture" />
            <ImageView
                android:layout_width="500dp"
                android:layout_height="12dp"
                android:layout_below="@+id/imgH1"
                android:layout_gravity="center"
                android:background="@color/agriculture"/>
            <ImageView
                android:id="@+id/imglogo1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="-60dp"
                android:layout_gravity="center"
                android:src="@drawable/icon4" />

            <TextView
                android:id="@+id/txtRehabilitation"
                android:layout_below="@+id/imglogo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_agri"
                android:textSize="36sp"
                android:textColor="#000000"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="130dp"
                android:layout_height="3dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:layout_below="@+id/txtRehabilitation"
                android:background="@color/agriculture"/>
            <TextView
                android:id="@+id/txtagriculture"
                android:layout_below="@+id/txtRehabilitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textSize="19sp"
                android:textColor="@color/text"
                android:layout_gravity="center"
                android:paddingHorizontal="40sp"
                android:textAlignment="center"
                android:text="@string/s_agriculture"
                android:gravity="center_horizontal" />

            <Button
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:id="@+id/btnlearnmore"
                android:textColor="#000000"
                android:text=""
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_bg_agriculture"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/imgfloriculture"
                    android:layout_width="480dp"
                    android:layout_height="480dp"
                    android:layout_marginTop="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/floriculture"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/imgfloriculture"
                    android:layout_marginTop="-200dp"
                    android:background="#C2000000">
                    <TextView
                        android:id="@+id/old"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:text="@string/agriCulture"
                        android:textColor="#ffffff"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/the"
                        android:layout_below="@+id/old"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginTop="5dp"
                        android:layout_margin="5dp"
                        android:layout_centerHorizontal="true"
                        android:text="@string/agr"
                        android:textColor="#ffffff"
                        android:layout_marginHorizontal="2dp"
                        android:textSize="16sp"
                        android:gravity="center_horizontal" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/btnfloriculture"
                    android:layout_width="480dp"
                    android:layout_height="40dp"
                    android:text="@string/fori"
                    android:paddingLeft="55sp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />
                <ImageView
                    android:id="@+id/line1"
                    android:layout_width="350dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"
                    android:src="@android:color/transparent"/>
                <TextView
                    android:id="@+id/btnhorticulture"
                    android:layout_width="480dp"
                    android:layout_height="40dp"
                    android:text="@string/hori"
                    android:paddingLeft="55sp"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="9dp" />
                <ImageView
                    android:id="@+id/line2"
                    android:layout_width="350dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"
                    android:src="@android:color/transparent"/>
                <TextView
                    android:id="@+id/btnfodder"
                    android:layout_width="480dp"
                    android:layout_height="40dp"
                    android:text="@string/fodd"
                    android:paddingLeft="55sp"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="9dp" />
                <ImageView
                    android:id="@+id/line3"
                    android:layout_width="350dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"
                    android:src="@android:color/transparent"/>
                <TextView
                    android:id="@+id/btngrains"
                    android:layout_width="480dp"
                    android:layout_height="40dp"
                    android:text="@string/grain"
                    android:paddingLeft="55sp"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="9dp" />
                <ImageView
                    android:id="@+id/line4"
                    android:layout_width="350dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"
                    android:src="@android:color/transparent"/>
                <TextView
                    android:id="@+id/btncotton"
                    android:layout_width="480dp"
                    android:layout_height="40dp"
                    android:text="@string/cottons"
                    android:paddingLeft="55sp"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="9dp" />
                <ImageView
                    android:id="@+id/line5"
                    android:layout_width="350dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"
                    android:src="@android:color/transparent"/>
                <View
                    android:layout_width="350dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#808080"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtfloriculture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/floriculture"
                    android:textSize="19sp"
                    android:padding="8dp"
                    android:textColor="@color/text"/>
            </LinearLayout>

            <Button
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:id="@+id/btnlearnmore1"
                android:textColor="#000000"
                android:text=""
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_bg_agriculture"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/imgdairy"
                    android:layout_width="480dp"
                    android:layout_height="480dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/dairy" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/imgdairy"
                    android:layout_marginTop="-200dp"
                    android:background="#C2000000">
                    <TextView
                        android:id="@+id/hostels"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:text="@string/all"
                        android:layout_centerHorizontal="true"
                        android:textColor="#ffffff"
                        android:textSize="22sp" />
                    <TextView
                        android:id="@+id/txthostels"
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/hostels"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginHorizontal="2dp"
                        android:gravity="center_horizontal"
                        android:text="@string/allied"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/btndairy"
                    android:layout_width="480dp"
                    android:layout_height="40dp"
                    android:text="@string/dairys"
                    android:paddingLeft="55sp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/line111"
                    android:layout_width="350dp"
                    android:layout_height="3dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"

                    android:background="@android:color/transparent"/>

                <TextView
                    android:id="@+id/btnaquaculture"
                    android:layout_width="480dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:layout_marginTop="9dp"
                    android:text="@string/aquacu"
                    android:paddingLeft="55sp"
                    android:textSize="18sp"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/line112"
                    android:layout_width="350dp"
                    android:layout_height="3dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"

                    android:background="@android:color/transparent"/>

                <TextView
                    android:id="@+id/btnpoultry"
                    android:layout_width="480dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:layout_marginTop="9dp"
                    android:text="@string/pol"
                    android:paddingLeft="55sp"
                    android:textSize="18sp"
                    android:textColor="#000000" />
                <ImageView
                    android:id="@+id/line113"
                    android:layout_width="350dp"
                    android:layout_height="3dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"

                    android:background="@android:color/transparent"/>
                <View
                    android:layout_width="350dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#808080"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtdairy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dairy"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/text"
                    android:textSize="19sp"
                    android:layout_margin="8dp"
                    android:padding="8dp" />
            </LinearLayout>

            <Button
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:id="@+id/btnlearnmore2"
                android:textColor="#000000"
                android:text=""
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_bg_agriculture"/>

            <LinearLayout
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="530dp"
                android:background=" #333333"

                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logowhite"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor=" #f2f2f2"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="14sp"
                    android:text="@string/warora"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:layout_marginTop="10sp"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="13.5sp"
                    android:text="@string/tal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="13.5sp"
                    android:text="@string/dis"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="13.5sp"
                    android:text="@string/mah"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor=" #f2f2f2"
                    android:layout_marginTop="20sp"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="14sp"
                    android:text="@string/touch"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:layout_marginTop="10sp"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="13.5sp"
                    android:text="@string/email_id"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="13.5sp"
                    android:text="@string/uss"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="13.5sp"
                    android:text="@string/ph"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor=" #f2f2f2"
                    android:layout_marginTop="20sp"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="14sp"
                    android:text="@string/sing_up"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="40dp">

                    <EditText
                        android:id="@+id/editTextTextEmailAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="@string/emailidd"
                        android:ems="10"
                        android:paddingLeft="20sp"
                        android:background="@android:color/white"
                        android:inputType="textEmailAddress" />

                    <Button
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffb31a"
                        android:textColor="@android:color/white"
                        android:text="@string/signuppp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="40dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fblogo"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/youtubelogo"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="#262626"
                    android:layout_above="@id/botton_navigation"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginVertical="5dp"
                        android:layout_marginLeft="10dp"
                        android:text="@string/copyright"
                        android:textColor="#808080"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>





            <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
                android:scaleX="1.07"
        android:id="@+id/botton_navigation"
        app:itemBackground="@color/colorPrimary"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>

        </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>

