<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:id="@+id/drawerLayout"
    tools:context=".ActivityProducts">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:itemHorizontalPadding="40dp"
        app:itemTextAppearance="@style/TextViewStyle"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/app_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/scrollView"
            android:layout_alignTop="@+id/imageView2"
            >


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/aaaaa"
                tools:layout_editor_absoluteX="86dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/labours"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="40dp"
                app:drawableTint="#060012"
                app:fontFamily="sans-serif-black"

                />
            <View
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="@color/main"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:drawableTint="#05000E"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="@string/abc"
                android:textSize="17dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="30dp">

                <View
                    android:layout_width="3dp"
                    android:layout_gravity="center"
                    android:layout_height="100dp"
                    android:background="@color/main"/>




                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/born"
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="298dp">



                    <ViewFlipper
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/vf2"
                        >


                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/ii"
                            />

                        <ImageView
                            android:id="@+id/imag1"
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/bb"
                            />

                        <ImageView
                            android:id="@+id/imag2"
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/cc"
                            />

                        <ImageView
                            android:id="@+id/imag3"
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/dd"
                            />

                        <ImageView
                            android:id="@+id/imag8"
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/ee"
                            />

                        <ImageView
                            android:id="@+id/imag5"
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/ff"
                            />

                        <ImageView
                            android:id="@+id/imag6"
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/rectangle"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/ng"
                            />

                    </ViewFlipper>


                    <ImageView
                        android:id="@+id/but"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:onClick="previouspage"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical|left"
                        android:background="@drawable/button_background"
                        app:srcCompat="@drawable/left"
                        tools:ignore="OnClick" />

                    <ImageView
                        android:id="@+id/butd"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:onClick="next_page"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical|right"
                        android:background="@drawable/button_background"
                        app:srcCompat="@drawable/right"
                        tools:ignore="OnClick" />


                </FrameLayout>

            </LinearLayout>


            <TextView
                android:layout_width="276dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="25dp"
                android:gravity="center"
                android:text="@string/suffi"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                app:drawableTint="#060012"
                app:fontFamily="sans-serif-black" />

            <View
                android:layout_width="130dp"
                android:layout_gravity="center"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="@color/main"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:drawableTint="#05000E"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="@string/xyz"
                android:textSize="17dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp">

                <View
                    android:layout_width="3dp"
                    android:layout_gravity="center"
                    android:layout_height="100dp"
                    android:background="@color/main"/>

                <TextView
                    android:layout_width="270dp"
                    android:layout_height="104dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:text="@string/gandi"
                    android:textSize="25dp" />

            </LinearLayout>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:drawableTint="#05000E"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:text="@string/pqr"
                android:layout_marginBottom="20dp"
                android:textSize="17dp" />


            <Button
                android:id="@+id/fip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="next"
                android:layout_gravity="center"/>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleX="1.07"
        android:id="@+id/botton_navigation"
        app:itemBackground="@color/colorPrimary"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>