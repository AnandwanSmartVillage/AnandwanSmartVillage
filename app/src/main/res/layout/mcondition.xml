<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout tools:context=".ActivityVaform" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <ScrollView android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginHorizontal="5dp">


        <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:layout_alignTop="@+id/imageView2" android:id="@+id/scrollView">


            <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="horizontal" android:background="@color/tx">


                <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical" android:background="@android:color/white">

                    <Spinner android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/spin5" android:background="@drawable/edit_text" android:paddingLeft="20sp" android:layout_marginRight="30dp" android:entries="@array/array" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:layout_gravity="center"/>

                    <Spinner android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/spin6" android:background="@drawable/edit_text" android:paddingLeft="20sp" android:layout_marginRight="30dp" android:entries="@array/arra" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:layout_gravity="center"/>

                    <TextView android:layout_height="41dp" android:layout_width="match_parent" android:layout_marginTop="20dp" android:layout_marginLeft="30dp" android:textSize="20dp" android:textColor="@color/black" android:text="Emergency Contact Details"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/first" android:background="@drawable/edit_text" android:paddingLeft="20sp" android:layout_marginRight="30dp" android:layout_marginTop="20dp" android:layout_marginLeft="30dp" android:layout_gravity="center" android:textSize="17dp" android:gravity="left" android:hint="First Name"  android:inputType="text"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/last" android:background="@drawable/edit_text" android:paddingLeft="20sp" android:layout_marginRight="30dp" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:layout_gravity="center" android:textSize="17dp" android:hint="Last Name"  android:inputType="text"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/no" android:background="@drawable/edit_text" android:paddingLeft="20sp" android:layout_marginRight="30dp" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:layout_gravity="center" android:textSize="17dp" android:hint="Mobile number "  android:inputType="text"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/cnno" android:background="@drawable/edit_text" android:paddingLeft="20sp" android:layout_marginRight="30dp" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:layout_gravity="center" android:textSize="17dp" android:hint="Confirm Mobile number " android:layout_marginBottom="30dp"  android:inputType="text"/>

                    <Button android:layout_height="40dp" android:layout_width="60dp" android:id="@+id/ssc1" android:background="#666666" android:layout_marginRight="30dp" android:layout_marginTop="20dp" android:layout_gravity="right" android:textColor="@android:color/white" android:text="next" android:layout_marginBottom="20dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>