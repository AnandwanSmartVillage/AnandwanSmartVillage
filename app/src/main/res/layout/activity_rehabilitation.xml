<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:id="@+id/drawerLayout"
    tools:context=".Rehabilitation">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:itemHorizontalPadding="40dp"
        app:itemTextAppearance="@style/TextViewStyle"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        layout="@layout/app_bar"/>

    <ScrollView
        android:id="@+id/scroll9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/botton_navigation"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgH1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/coverrehabilitation"/>
            <ImageView
                android:layout_width="430dp"
                android:layout_height="12dp"
                android:layout_below="@+id/imgH1"
                android:layout_gravity="center"
                android:background="@color/rehabilitation1"/>
            <ImageView
                android:id="@+id/imglogo1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="-60dp"
                android:layout_gravity="center"
                android:src="@drawable/icon5" />

            <TextView
                android:id="@+id/txtRehabilitation"
                android:layout_below="@+id/imglogo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_rehab"
                android:textSize="36sp"
                android:textColor="#000000"
                android:layout_gravity="center"/>
            <ImageView
                android:layout_width="130dp"
                android:layout_height="3dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:layout_below="@+id/txtRehabilitation"
                android:background="@color/rehabilitation1"/>
            <TextView
                android:id="@+id/baba"
                android:layout_below="@+id/txtRehabilitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textSize="19sp"
                android:textColor="@color/text"
                android:layout_gravity="center"
                android:paddingHorizontal="40sp"
                android:textAlignment="center"
                android:text="@string/baba"
                android:gravity="center_horizontal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/imgsneh"
                    android:layout_width="480dp"
                    android:layout_height="480dp"
                    android:layout_marginTop="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/snehsavali"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/imgsneh"
                    android:layout_marginTop="-200dp"
                    android:background="#C2000000">
                    <TextView
                        android:id="@+id/old"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:text="@string/old_age"
                        android:textColor="#ffffff"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/the"
                        android:layout_below="@+id/old"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginTop="5dp"
                        android:layout_margin="5dp"
                        android:layout_centerHorizontal="true"
                        android:text="@string/oldage"
                        android:textColor="#ffffff"
                        android:layout_marginHorizontal="2dp"
                        android:textSize="16sp"
                        android:gravity="center_horizontal" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/btnsneh"
                    android:layout_width="480dp"
                    android:layout_height="40dp"
                    android:text="@string/Sneh_Savali"
                    android:paddingLeft="50sp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />


                <ImageView
                    android:id="@+id/line1"
                    android:layout_width="350dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/btnsneh"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:id="@+id/btnapulki"
                    android:layout_width="480dp"
                    android:layout_height="40dp"
                    android:text="@string/Apulki"
                    android:paddingLeft="50sp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="9dp"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/line2"
                    android:layout_width="350dp"
                    android:layout_height="3dp"
                    android:layout_below="@+id/btnsneh"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/transparent"/>
                <View
                    android:layout_width="350dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#808080"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtsneh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/snehsavali"
                    android:layout_marginTop="15dp"
                    android:layout_margin="8dp"
                    android:textColor="@color/text"
                    android:textSize="19sp"
                    android:padding="8dp" />
            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/imguttarayan"
                    android:layout_width="480dp"
                    android:layout_height="480dp"
                    android:layout_marginTop="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/uttarayan" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/imguttarayan"
                    android:layout_marginTop="-200dp"
                    android:background="#C2000000">
                    <TextView
                        android:id="@+id/communes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:text="@string/COMMUNES"
                        android:layout_centerHorizontal="true"
                        android:textColor="#ffffff"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/txtcommunes"
                        android:layout_below="@+id/communes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_marginTop="5dp"
                        android:layout_margin="5dp"
                        android:layout_centerHorizontal="true"
                        android:text="@string/rds"
                        android:textColor="#ffffff"
                        android:textSize="16sp"
                        android:layout_marginHorizontal="2dp"
                        android:gravity="center_horizontal" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/btnuttarayan"
                    android:layout_width="480dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:text="@string/Uttarayanp"
                    android:paddingLeft="50sp"
                    android:textSize="18sp"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/line11"
                    android:layout_width="350dp"
                    android:layout_height="3dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:id="@+id/btnkrishi"
                    android:layout_width="480dp"
                    android:layout_height="40dp"
                    android:text="@string/Krishi_Niketan"
                    android:paddingLeft="50sp"
                    android:textSize="18sp"
                    android:layout_marginTop="9dp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/line12"
                    android:layout_width="350dp"
                    android:layout_height="3dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:id="@+id/btnsukh"
                    android:layout_width="480dp"
                    android:layout_height="40dp"
                    android:text="@string/Sukh_sadan"
                    android:paddingLeft="50sp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="9dp"
                    android:textColor="#000000" />
                <ImageView
                    android:id="@+id/line13"
                    android:layout_width="350dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="2dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:id="@+id/btnmukti"
                    android:layout_width="480dp"
                    android:layout_height="40dp"
                    android:text="@string/Mukti_sadan"
                    android:paddingLeft="50sp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="9dp"
                    android:textColor="#000000" />
                <ImageView
                    android:id="@+id/line14"
                    android:layout_width="350dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:id="@+id/btnmitrangan"
                    android:layout_width="480dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:layout_marginTop="9dp"
                    android:text="@string/Mitrangan"
                    android:paddingLeft="50sp"
                    android:textSize="18sp"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/line15"
                    android:layout_width="350dp"
                    android:layout_height="3dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"/>
                <View
                    android:layout_width="350dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#808080"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtuttarayan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/uttarayan"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/text"
                    android:textSize="19sp"
                    android:layout_margin="8dp"
                    android:padding="8dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <ImageView
                    android:id="@+id/imggokul"
                    android:layout_width="480dp"
                    android:layout_height="480dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/gokul" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_below="@+id/imggokul"
                    android:layout_marginTop="-200dp"
                    android:background="#C2000000">
                    <TextView
                        android:id="@+id/hostels"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:text="@string/HOSTELS"
                        android:layout_centerHorizontal="true"
                        android:textColor="#ffffff"
                        android:textSize="22sp" />
                    <TextView
                        android:id="@+id/txthostels"
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/hostels"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_margin="5dp"
                        android:gravity="center_horizontal"
                        android:text="@string/hostels"
                        android:textAlignment="center"
                        android:layout_marginHorizontal="2dp"
                        android:textColor="#ffffff"
                        android:textSize="16sp" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/btngokul"
                    android:layout_width="480dp"
                    android:layout_height="40dp"
                    android:text="@string/Gokul"
                    android:paddingLeft="50sp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/line111"
                    android:layout_width="350dp"
                    android:layout_height="3dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:id="@+id/btnyuvagram"
                    android:layout_width="480dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:layout_marginTop="9dp"
                    android:text="@string/Yuvagram"
                    android:paddingLeft="50sp"
                    android:textSize="18sp"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/line112"
                    android:layout_width="350dp"
                    android:layout_height="3dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:id="@+id/btnSandhiniketan"
                    android:layout_width="480dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:layout_marginTop="9dp"
                    android:text="@string/Sandhi_Niketan"
                    android:paddingLeft="50sp"
                    android:textSize="18sp"
                    android:textColor="#000000" />
                <ImageView
                    android:id="@+id/line113"
                    android:layout_width="350dp"
                    android:layout_height="3dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/transparent"/>
                <View
                    android:layout_width="350dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#808080"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtgokul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gokul"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/text"
                    android:textSize="19sp"
                    android:layout_margin="8dp"
                    android:padding="8dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="530dp"
                android:background=" #333333"

                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logowhite"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor=" #f2f2f2"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="14sp"
                    android:text="@string/warora"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:layout_marginTop="10sp"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="13.5sp"
                    android:text="@string/tal"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="13.5sp"
                    android:text="@string/dis"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="13.5sp"
                    android:text="@string/mah"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor=" #f2f2f2"
                    android:layout_marginTop="20sp"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="14sp"
                    android:text="@string/touch"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:layout_marginTop="10sp"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="13.5sp"
                    android:text="@string/email_id"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="13.5sp"
                    android:text="@string/uss"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="13.5sp"
                    android:text="@string/ph"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor=" #f2f2f2"
                    android:layout_marginTop="20sp"
                    android:layout_marginHorizontal="40dp"
                    android:textSize="14sp"
                    android:text="@string/sing_up"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="40dp">

                    <EditText
                        android:id="@+id/editTextTextEmailAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:hint="@string/emailidd"
                        android:ems="10"
                        android:paddingLeft="20sp"
                        android:background="@android:color/white"
                        android:inputType="textEmailAddress" />

                    <Button
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#ffb31a"
                        android:textColor="@android:color/white"
                        android:text="@string/signuppp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="40dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fblogo"/>

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/youtubelogo"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="#262626"
                    android:layout_above="@id/botton_navigation"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginVertical="5dp"
                        android:layout_marginLeft="10dp"
                        android:text="@string/copyright"
                        android:textColor="#808080"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>





        <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:scaleX="1.07"
        android:id="@+id/botton_navigation"
        app:itemBackground="@color/colorPrimary"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>