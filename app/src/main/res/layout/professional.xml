<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout tools:context=".ActivityVaform" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">


    <ScrollView android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginHorizontal="5dp">


        <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:layout_alignTop="@+id/imageView2" android:id="@+id/scrollView">


            <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="horizontal" android:background="@color/tx">


                <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical" android:background="@android:color/white">

                    <Spinner android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/spin7" android:background="@drawable/edit_text" android:layout_marginRight="30dp" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:paddingLeft="19sp" android:layout_gravity="center" android:entries="@array/array1"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/first" android:background="@drawable/edit_text" android:layout_marginRight="30dp" android:layout_marginTop="20dp" android:layout_marginLeft="30dp" android:paddingLeft="20sp" android:layout_gravity="center" android:textSize="17dp" android:gravity="left" android:hint="University/Board/Institute "  android:inputType="text"/>

                    <Spinner android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/spin8" android:background="@drawable/edit_text" android:layout_marginRight="30dp" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:paddingLeft="20sp" android:layout_gravity="center" android:entries="@array/array2"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/last" android:background="@drawable/edit_text" android:layout_marginRight="30dp" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:paddingLeft="20sp" android:layout_gravity="center" android:textSize="17dp" android:hint="Year of Passing"  android:inputType="text"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/yr" android:background="@drawable/edit_text" android:layout_marginRight="30dp" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:paddingLeft="20sp" android:layout_gravity="center" android:textSize="17dp" android:hint="Current or Latest Organisation Name"  android:inputType="text"/>

                    <Spinner android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/spin9" android:background="@drawable/edit_text" android:layout_marginRight="30dp" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:paddingLeft="20sp" android:layout_gravity="center" android:entries="@array/array3"/>

                    <EditText android:layout_height="37dp" android:layout_width="match_parent" android:id="@+id/date" android:background="@drawable/edit_text" android:layout_marginRight="30dp" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:paddingLeft="20sp" android:layout_gravity="center" android:textSize="17dp" android:hint="Designation"  android:inputType="text"/>

                    <TextView android:layout_height="54dp" android:layout_width="wrap_content" android:id="@+id/textVie" android:layout_marginRight="30dp" android:layout_marginTop="15dp" android:layout_marginLeft="30dp" android:layout_gravity="left" android:textSize="17dp" app:fontFamily="sans-serif" android:textColor="@color/black" android:text="How do you get to know about Anandwan?" android:layout_marginBottom="10dp"/>

                    <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:layout_gravity="left" android:textSize="17dp" android:textColor="@color/black" android:text="Movie"/>

                    <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/rb2" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:layout_gravity="left" android:textSize="17dp" android:textColor="@color/black" android:text="Social Media"/>

                    <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:layout_gravity="left" android:textSize="17dp" android:textColor="@color/black" android:text="Television"/>

                    <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:layout_gravity="left" android:textSize="17dp" android:textColor="@color/black" android:text="Newspaper/Magazine "/>

                    <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:layout_gravity="left" android:textSize="17dp" android:textColor="@color/black" android:text="Shram Sanskar Chhavni"/>

                    <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:layout_gravity="left" android:textSize="17dp" android:textColor="@color/black" android:text="Anandwan Website/Blog"/>

                    <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:layout_gravity="left" android:textSize="17dp" android:textColor="@color/black" android:text="Book"/>

                    <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:layout_gravity="left" android:textSize="17dp" android:textColor="@color/black" android:text="Friend/Family"/>

                    <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:layout_gravity="left" android:textSize="17dp" android:textColor="@color/black" android:text="Visited"/>

                    <RadioButton android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginRight="30dp" android:layout_marginLeft="30dp" android:layout_gravity="left" android:textSize="17dp" android:textColor="@color/black" android:text="Search Engine (Google/Yahoo/Bing)" android:layout_marginBottom="30dp"/>

                    <Button android:layout_height="40dp" android:layout_width="60dp" android:id="@+id/ssc4" android:background=" #666666" android:layout_marginRight="30dp" android:layout_marginTop="20dp" android:layout_gravity="right" android:textColor="@android:color/white" android:text="next" android:layout_marginBottom="20dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>